{
  "root": true,
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "./tsconfig.eslint.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "tests/**/*.test.ts"
      ],
      "extends": [
        "plugin:jest/all"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 12,
        "project": "./tests/tsconfig.json"
      },
      "plugins": [
        "jest"
      ],
      "env": {
        "jest/globals": true
      }
    }
  ]
}
